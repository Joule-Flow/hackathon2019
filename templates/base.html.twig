<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Outlinker &#128663;{% endblock %}</title>
        {% block stylesheets %}
			<meta name="viewport" content="width=device-width, initial-scale=2.0" />
			<link rel="stylesheet" href="{{asset('gui/chosen/docsupport/prism.css')}}">
			<link rel="stylesheet" href="{{asset('gui/chosen/chosen.css')}}">
			<link rel="stylesheet" href="{{asset('gui/pickerjs/picker.css')}}">
			<style type="text/css">
				body {
					background: url({{asset('gui/images/background.jpg')}});
					background-size: cover;
					font-family: Arial, Helvetica, sans-serif;
					margin-bottom: 120px;
					padding-bottom: 20px;
				}
				.center {
					text-align: center;
				}
			
				.flex-box-v {
					display: flex;
					flex-direction: column;
				}
				.flex-box-h {
					display: flex;
					flex-direction: row;
				}
				.flex-box-h > * {
					width: 33%;
				}
				
				.chosen-container .chosen-results li {
					font-size: 30px;
					line-height: 30px;
				}
				.chosen-container-single .chosen-single span {
					padding-top: 22px;
				}
				.chosen-container-single .chosen-single div b {
					margin-top: 22px;
				}
				.chosen-container-single .chosen-search input[type="text"] {
					height: 30px;
					font-size: 30px;
				}
				
				.outlinkerMain {
					padding: 0 40px;
				}
				
				/* All fields */
				.outlinkerMain input, .chosen-container-single .chosen-single {
					height: 70px;
					border-radius: 15px;
					border: 1px solid #CCCCCC;
					font-size: 22px;
					text-align: center;
					opacity: 0.85;
				}
				
				.title {
					text-align: center;
					margin-top: 20px;
					color: white;
					font-weight: bold;
				}
				.fromPlace + .chosen-container {
					width: 100%!important; /* um "Chosen" nicht zu stören */
					text-align: center;
					margin-top: 30px;
				}
				.fromDay {
					margin-top: 15px;
				}
				.fromTime {
					margin-top: 15px;
				}
				.toPlace + .chosen-container {
					width: 100%!important; /* um "Chosen" nicht zu stören */
					text-align: center;
					margin-top: 30px;
				}
				.toDay {
					margin-top: 15px;
				}
				.toTime {
					margin-top: 15px;
				}
				
				.regularly {
					color: white;
					line-height:40px;
				}
					.regBox{
						color: white;
					}
					.regBox > input {
						margin-top: 40px;
						height: 20px;
						width: 20px;
					}
					
					.regularly + div {
						display: none;
					}
					.regularly:checked + div {
						display: flex;
					}
					.regularlyFreqency + .chosen-container {
						width: 33%!important; /* um "Chosen" nicht zu stören */
					}
					.regularlyDuration {
						margin-left: 40px;
					}
				
				.menu {
					position: fixed;
					bottom: 0;
					left: 0;
					width: 100%;
				}
					.menu > * {
						background: white;
						padding: 10px;
						text-align: center;
						vertical-align: middle;
						border-left: 1px solid grey;
					}
					.button.take {
						margin-top: 30px;
					}
			</style>
		{% endblock %}
    </head>
    <body>
        {% block body %}{% endblock %}
        {% block javascripts %}
			<script src="{{asset('gui/chosen/docsupport/jquery-3.2.1.min.js')}}" type="text/javascript"></script>
			<script src="{{asset('gui/chosen/chosen.jquery.js')}}" type="text/javascript"></script>
			<script src="{{asset('gui/chosen/docsupport/prism.js')}}" type="text/javascript" charset="utf-8"></script>
			<script src="{{asset('gui/chosen/docsupport/init.js')}}" type="text/javascript" charset="utf-8"></script>
			<script src="{{asset('gui/pickerjs/picker.js')}}"></script>
			<script>
				new Picker(document.querySelector('.fromDay'), {
					format: 'DD.MM.YYYY',
					text: {
						title: 'Datum auswählen',
					},
				}).pick();
				new Picker(document.querySelector('.fromTime'), {
					format: 'HH:mm',
					text: {
						title: 'Zeit auswählen',
					},
				}).pick();
				new Picker(document.querySelector('.toDay'), {
					format: 'DD.MM.YYYY',
					text: {
						title: 'Datum auswählen',
					},
				}).pick();
				new Picker(document.querySelector('.toTime'), {
					format: 'HH:mm',
					text: {
						title: 'Zeit auswählen',
					},
				}).pick();
				new Picker(document.querySelector('.regularlyDuration'), {
					format: 'DD.MM.YYYY',
					text: {
						title: 'Datum auswählen',
					},
				}).pick();
			</script>
		{% endblock %}
    </body>
</html>
